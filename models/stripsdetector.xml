		<pixsize_y units="um">12500</pixsize_y>
		<pixsize_z units="um">155.0</pixsize_z>

		<!-- Overall sensor volume -->
		<sensor_hx units="um">50000.0</sensor_hx>
		<sensor_hy units="um">50000.0</sensor_hy>
		<sensor_hz units="um">155.0</sensor_hz>

