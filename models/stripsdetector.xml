		<sensor_posx units="mm">0</sensor_posx>
		<sensor_posy units="mm">0</sensor_posy>
		<sensor_posz units="mm">0</sensor_posz>

		<!-- PCB -->
		<pcb_hx units="mm">60</pcb_hx> 
		<pcb_hy units="mm">60</pcb_hy> 
		<pcb_hz units="mm">0.15</pcb_hz> 
		
		<!--sensor_Resistivity units="">0.0</sensor_resisitivity-->
		<!-- MIP_Tot></MIP_Tot -->
		<!-- MIP_Charge></MIP_Charge -->
		<!-- Counter_Depth></Counter_Depth -->
		<!-- Clock_Unit></Clock_Unit -->
		
		<depletion_voltage units="V">380</depletion_voltage>
		<bias_voltage units="V">400</bias_voltage>
		<threshold units="fC">1.0</threshold>
		<sensor_temperature units="C">25</sensor_temperature>
	</pixeldet>

